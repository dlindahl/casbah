<div class="container">
  <div class="row">
    <div class="span4 offset4">
      <h1>Sign In</h1>

      <% if flash[:alert] %>
        <p class="alert alert-error">
          <%= flash[:alert] %>
        </p>
      <% end %>

      <%= form_tag login_url, class:'form-horizontal' do %>
        <%= hidden_field_tag :lt, @ticket.id %>

        <% if params[:service] %>
          <%= hidden_field_tag :service, params[:service] %>
        <% end %>

        <% if params[:warn] %>
          <%= hidden_field_tag :warn, params[:warn] %>
        <% end %>

        <div class="control-group">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-user"></i></span>
            <%= text_field_tag :username, nil, placeholder:'Username', autocomplete:'off' %>
          </div>
        </div>

        <div class="control-group">
          <div class="input-prepend">
            <span class="add-on"><i class="icon-lock"></i></span>
            <%= password_field_tag :password, nil, placeholder:'Password', autocomplete:'off' %>
          </div>
        </div>

        <button type="submit" class="btn btn-primary">Sign In</button>
      <% end %>
    </div>
  </div>
</div>
